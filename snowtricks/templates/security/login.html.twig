{% extends 'layout/base.html.twig' %}

{% block title %}{{ title }}{% endblock %}
{% form_theme form with ['form_themes/form_errors.html.twig'] %}
{% block body %}
    <div class="font-sans w-10/12 md:w-4/12 mx-auto">
        {{ form_start(form,
            {'attr': { 'class': '', 'novalidate': true }})
        }}
            {{ form_row(form.username,
                {
                    'label': 'Pseudo :',
                    'attr': {
                        'placeholder': 'votre pseudo',
                        'class': 'input-txt',
                }})
            }}
            {{ form_row(form.password,
                {
                    'label': 'Mot de passe :',
                    'attr': {
                        'placeholder': 'votre mot de passe',
                        'class': 'input-txt'
                }})
            }}
            <div class="mx-6 mt-6 mx-auto">
                <button class="submit_btn " id="submit" type="submit" name="submit" >envoyer !</button>
                <ul class="my-4">
                    <li class="class">
                        <a href="/register">inscription</a>
                    </li>
                    <li class="class">
                        <a href="/reset">mot de passe oubli√©e ?</a>
                    </li>
                </ul>
            </div>
        {{ form_end(form) }}
    </div>

    {#
